        <%= link_to 'New article', '/articles/new' %>
      </form>

    </div><!-- /.container-fluid -->
  </nav>

<br>

  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">

        <%= yield %>

      </div>
    </div>
  </div>

  </body>
</html>
